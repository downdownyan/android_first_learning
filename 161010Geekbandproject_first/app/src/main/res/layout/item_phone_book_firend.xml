<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_view_phone"
        android:layout_width="50dp"
        android:layout_height="50dp"

        />
    <TextView
        android:layout_toRightOf="@+id/image_view_phone"
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_book_name"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/age_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_book_age"
        android:layout_alignBottom="@+id/image_view_phone"
        android:layout_toRightOf="@+id/image_view_phone"
        android:layout_toEndOf="@+id/image_view_phone" />
</RelativeLayout>